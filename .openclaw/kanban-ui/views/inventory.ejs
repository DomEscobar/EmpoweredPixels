<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Darkened Forge Inventory</title>
    <style>
        body {
            background-color: #0b0b0b;
            color: #d4c3a1;
            font-family: 'Verdana', sans-serif;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .iron-frame {
            background: #1a1a1b;
            border: 8px solid #3d3d3d;
            border-image: linear-gradient(to bottom, #4a4a4a, #2a2a2a, #1a1a1a) 1;
            box-shadow: 0 10px 30px rgba(0,0,0,0.8), inset 0 0 20px rgba(0,0,0,1);
            padding: 20px;
            position: relative;
        }

        .frame-header {
            text-align: center;
            border-bottom: 2px solid #4a3a2a;
            margin-bottom: 15px;
            padding-bottom: 10px;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            letter-spacing: 3px;
            color: #8b0000;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px #000;
        }

        .inventory-grid {
            display: grid;
            grid-template-columns: repeat(8, 64px);
            grid-template-rows: repeat(4, 64px);
            gap: 4px;
            background: #232323;
            border: 4px solid #111;
            padding: 4px;
        }

        .slot {
            width: 64px;
            height: 64px;
            background: #0d0d0d;
            border: 2px solid #332b24;
            box-shadow: inset 0 0 10px #000;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
            position: relative;
        }

        .slot:hover {
            border-color: #7a6a5a;
            background: #1a1510;
        }

        .slot img {
            width: 52px;
            height: 52px;
            image-rendering: pixelated;
        }

        .tooltip {
            position: absolute;
            z-index: 100;
            background: rgba(0, 0, 0, 0.95);
            border: 2px solid #5a4a3a;
            width: 240px;
            padding: 12px;
            pointer-events: none;
            display: none;
            box-shadow: 5px 5px 15px rgba(0,0,0,0.9);
        }

        .tooltip .item-name { font-size: 18px; font-weight: bold; margin-bottom: 5px; }
        .tooltip .item-type { font-size: 13px; color: #888; font-style: italic; margin-bottom: 10px; }
        .tooltip .stats { border-top: 1px solid #333; padding-top: 8px; }
        .tooltip .stat { display: flex; justify-content: space-between; font-size: 14px; margin-bottom: 3px; }
        .tooltip .stat-label { color: #a5a5a5; }
        .tooltip .stat-value { color: #4eff4e; }
        .tooltip .flavor { font-size: 12px; color: #6d5e4e; margin-top: 10px; font-style: italic; }

        .rarity-common { color: #ffffff; }
        .rarity-magic { color: #5151ff; text-shadow: 0 0 5px #0000ff88; }
        .rarity-rare { color: #ffff00; text-shadow: 0 0 5px #ffff0088; }
        .rarity-legendary { color: #ff8000; text-shadow: 0 0 5px #ff800088; }
    </style>
</head>
<body>

<div class="iron-frame">
    <div class="frame-header">
        <div class="title">Darkened Forge</div>
    </div>
    <div class="inventory-grid" id="grid">
        <!-- Slots generated by JS -->
    </div>
</div>

<div class="tooltip" id="tooltip">
    <div class="item-name" id="tt-name"></div>
    <div class="item-type" id="tt-type"></div>
    <div class="stats" id="tt-stats"></div>
    <div class="flavor" id="tt-flavor"></div>
</div>

<script>
const items = [
    {
        name: "Soul-Forged Blade",
        type: "Two-Handed Sword",
        rarity: "legendary",
        icon: "wpn_soul_blade_9f8e.png?prompt=legendary%20broadsword%20with%20glowing%20purple%20runes%20and%20dark%20steel&style=pixel_game_asset&key=NOGON",
        stats: { Damage: "45-62", Strength: "+15", LifeSteal: "5%" },
        flavor: "The blade whispers secrets of the damned."
    },
    {
        name: "Ironbound Bulwark",
        type: "Large Shield",
        rarity: "rare",
        icon: "shd_iron_bulwark_a1b2.png?prompt=heavy%20iron%20tower%20shield%20with%20scratches%20and%20spikes&style=pixel_game_asset&key=NOGON",
        stats: { Armor: "+120", BlockChance: "22%", Thorns: "12" },
        flavor: "Unmovable as the mountain itself."
    },
    {
        name: "Draft of Giants",
        type: "Potion",
        rarity: "magic",
        icon: "pot_giant_3c4d.png?prompt=large%20glass%20vial%20with%20thick%20bubbling%20orange%20liquid&style=pixel_game_asset&key=NOGON",
        stats: { Duration: "60s", Strength: "+25" },
        flavor: "Makes you feel ten feet tall."
    },
    {
        name: "Weathered Boots",
        type: "Leather Boots",
        rarity: "common",
        icon: "bts_leather_e5f6.png?prompt=old%20worn%20leather%20boots%20with%20straps&style=pixel_game_asset&key=NOGON",
        stats: { Speed: "+10%", Stamina: "+5" },
        flavor: "They've seen many miles of blood and dirt."
    },
    {
        name: "Blood Onyx Ring",
        type: "Ring",
        rarity: "rare",
        icon: "rng_onyx_g7h8.png?prompt=dark%20ring%20with%20a%20blood-red%20gemstone&style=pixel_game_asset&key=NOGON",
        stats: { FireRes: "15%", CritChance: "+4%" },
        flavor: "Cool to the touch, despite the heat of the forge."
    }
];

const grid = document.getElementById('grid');
const tooltip = document.getElementById('tooltip');

for (let i = 0; i < 32; i++) {
    const slot = document.createElement('div');
    slot.className = 'slot';
    
    if (i < items.length) {
        const item = items[i];
        const img = document.createElement('img');
        img.src = `https://vibemedia.space/${item.icon}`;
        slot.appendChild(img);
        
        slot.onmouseenter = (e) => showTooltip(e, item);
        slot.onmouseleave = hideTooltip;
        slot.onmousemove = moveTooltip;
    }
    
    grid.appendChild(slot);
}

function showTooltip(e, item) {
    document.getElementById('tt-name').innerText = item.name;
    document.getElementById('tt-name').className = 'item-name rarity-' + item.rarity;
    document.getElementById('tt-type').innerText = item.type;
    document.getElementById('tt-flavor').innerText = item.flavor;
    
    const statsContainer = document.getElementById('tt-stats');
    statsContainer.innerHTML = '';
    for (const [key, value] of Object.entries(item.stats)) {
        const statDiv = document.createElement('div');
        statDiv.className = 'stat';
        statDiv.innerHTML = `<span class="stat-label">${key}</span><span class="stat-value">${value}</span>`;
        statsContainer.appendChild(statDiv);
    }
    
    tooltip.style.display = 'block';
    moveTooltip(e);
}

function hideTooltip() {
    tooltip.style.display = 'none';
}

function moveTooltip(e) {
    let x = e.clientX + 15;
    let y = e.clientY + 15;
    
    // Boundary check
    if (x + 250 > window.innerWidth) x = e.clientX - 255;
    if (y + 200 > window.innerHeight) y = e.clientY - 210;
    
    tooltip.style.left = x + 'px';
    tooltip.style.top = y + 'px';
}
</script>

</body>
</html>
